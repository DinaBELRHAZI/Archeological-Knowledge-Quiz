<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main2"
    android:orientation="vertical"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="5dp"
    android:padding="10dip"
    android:background="#ff39703b">

    

    <TextView
        android:text="Modifier une question"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"/>
    
    <TextView
            android:id="@+id/textViewId"
            android:textColor="#ffffe082"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"  > 

        <TextView
            android:text="Numéro de la question :"
            android:textColor="#ffffe082"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/textViewIdQuestion"
            android:textColor="@android:color/white"
            android:autoSizeTextType="uniform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:textSize="15dp"/>

        </LinearLayout> -->

    <TextView
            android:text="Question :"
            android:textColor="#ffffe082"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

    <EditText
       android:id="@+id/textViewQuestion"
       android:textColor="@android:color/white"
       android:autoSizeTextType="uniform"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="15dp"/>

    <TextView
        android:text="Réponse 1 :"
        android:textColor="#ffffe082"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/textViewRep1"
        android:textColor="@android:color/white"
        android:autoSizeTextType="uniform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"/>


    <TextView
        android:text="Réponse 2 :"
        android:textColor="#ffffe082"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/textViewRep2"
        android:textColor="@android:color/white"
        android:autoSizeTextType="uniform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"/>


    <TextView
        android:text="Réponse 3 :"
        android:textColor="#ffffe082"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/textViewRep3"
        android:textColor="@android:color/white"
        android:autoSizeTextType="uniform"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15dp"/>



    <TextView
        android:text="Réponse 4 :"
        android:textColor="#ffffe082"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/textViewRep4"
        android:textColor="@android:color/white"
        android:autoSizeTextType="uniform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"  > 

        <TextView
            android:text="Bone réponse :"
            android:textColor="#ffffe082"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/textViewBonneRep"
            android:textColor="@android:color/white"
            android:autoSizeTextType="uniform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:textSize="15dp"/>


    </LinearLayout>

    <TextView
        android:text="Description :"
        android:textColor="#ffffe082"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <EditText
            android:id="@+id/textViewDescription"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp" />
    </ScrollView>

    <Button
        android:id="@+id/btnSubmit"
        android:text="Enregistrer"
        app:backgroundTint="#ffff9100"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
</LinearLayout>
